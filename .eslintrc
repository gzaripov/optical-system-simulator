{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "react/jsx-filename-extension": "off",
    "class-methods-use-this": "off",
    "no-mixed-operators": "off",
    "no-return-assign": "off",
    "no-console": "off",
    "no-plusplus": "off",
    "no-new": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["./src"]
      }
    }
  }
}
